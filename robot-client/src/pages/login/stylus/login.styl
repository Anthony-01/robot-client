.wrapper
  position: absolute;
  left 0;
  top 0;
  bottom 0;
  width 100%;
  height 100%
  min-width 100%;
  min-height 100%;
  background-image url('./resource/login_bg.png')
  //background-image url('./resource/login_preview.png')
  background-size:100% 100%;
  background-position: left top;
  background-repeat no-repeat
  .header
    margin: 40px auto;
  .box
    position relative;
    margin: auto auto;
    padding: 40px;
    //height: 40%;
    //width: 23%;
    width 410px;
    height 410px;
    min-width 410px;
    min-height 410px;
    background-color: #fff;
    border-radius 2px;

    .name-input
      margin: 20px auto;
      font-size 20px;
      background-color: #fff;
      //border 1px solid gray;
      //border-radius 0;
      &:focus
        background-color: #fff;
      //width: 30px;
    .pwd-div
      position: relative
      margin-bottom: 20px;
      .pwd-input
        margin-bottom: 20px;
        font-size 20px;
      .btn-forget
        position: absolute
        right 0;
        bottom: -10px;

    .checkcha-div
      position relative;
      width 100%;
      height 50px;
      margin-bottom 50px;
      .check-input
        position absolute;
        left 0;
        width: 200px;
        padding: 0 25px;
        height: 50px;
        border: 1px solid #f2f2f2;
        background: #fff;
        font-size: 14px;
        line-height: 48px;
        //border-radius: 25px;
      .checkcha
        position absolute;
        right 0;
        cursor: pointer;
    .btn-login
      width 100%;
      font-size: 20px;
  .footer
    position: absolute;
    bottom 10px;
    color: #7e90a3;
    font-size 12px;
    margin-left  50%;
    //margin-right  auto;
