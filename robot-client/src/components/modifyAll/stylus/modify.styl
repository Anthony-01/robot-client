.modify-wrapper
  position: relative
  .m-wrapper
    text-align left;
    min-width: 1550px;
    .content-wrapper
      margin-top -30px;
      padding-top 5px;
      .line
        position: absolute;
        left: 0;
        right: 0;
        border-top 2px solid #f1f1f1
      .split
        margin-top: 50px;
        height: 30px;
        padding-left: 8px;
        text-align left;
        line-height 30px;
        color: #323232;
        font-size: 16px;
        background: #f5f5f5
        font-family: "微软雅黑", Arial;
        &:nth-child(2)
          margin-top 5px;
      .game
        display: flex;
        justify-content flex-start;
        padding-top 10px;
        padding-bottom 12px;

        select
          height: 30px;
          width: 160px;
          margin-left: 20px;
          border-radius 4px;
          border 1px solid #e4e8ed;
          font-size: 16px;
          text-align center;
          padding: 0 0 0 50px;
        .title
          flex-shrink 0;
          width: 100px;
          text-align right;
          line-height 36px;
          color: #666666;
          font-size: 16px;
          font-weight 700;

        .game
          display: flex;
          justify-content flex-start;
      .select-wrapper
        display flex;
        justify-content: flex-start;
        padding-top 10px;
        padding-bottom 12px;
        .title:nth-child(3)
          padding-left: 30px;
        .title
          width: 100px;
          text-align right;
          line-height 36px;
          color: #666666;
          font-size: 16px;
          font-weight 700;
        select
          height: 30px;
          width: 160px;
          margin-left: 20px;
          padding: 0 0 0 50px;
          border-radius 4px;
          border 1px solid #e4e8ed;
          font-size: 16px;
          text-align center;
          &:before
            content: "";
            position: absolute;
            width: 0;
            height: 0;
            border: 10px solid transparent;
            border-top-color: #ccc;
            top: 14px;
            right: 10px;
            cursor: pointer;
          &:focus
            outline: none;
        .timeSelect
          height: 30px;
          width: 160px;
          margin-left: 20px;
          padding 0;
        .club-id
          border-radius 4px;
          border 1px solid #e4e8ed;
          margin-left: 20px;
          height: 30px;
          width: 160px;
          padding 0;
          text-align center;
          font-size: 16px;
      .btn-close
        position: absolute;
        left: 0;
        right: 0;
        height: 51px;
        border-bottom-right-radius: 5px;
        border-bottom-left-radius: 5px;
        background #f5f5f5;
        margin-top: -2px;
        display flex;
        justify-content center;
        align-items center;
        .agree-btn
          margin-right 30px;
        .close-btn
          margin-left: 30px;
