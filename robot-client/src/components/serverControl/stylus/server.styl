.server-wrapper
  position relative
  padding 20px 15px 20px;
  background: #ffffff;
  min-width 1670px;
  .header
    position: relative;
    padding-bottom: 39px;
    border-bottom: 1px solid #0b97ff;
    .header-title
      position: absolute;
      left 0;
  .search
    display: flex;
    justify-content: flex-start;
    align-items center;
    padding 20px 35px;
    margin-bottom: 12px;
    .search-txt
      color: #5b5b5b
      font-size: 14px;
      margin-left: 15px;
    .club-id
      width: 120px;
      height: 26px;
      border-radius 5px;
      border 2px solid #e8ecf0;
      padding-left 10px;
    .club-name
      width: 120px;
      height: 26px;
      border-radius 5px;
      border 2px solid #e8ecf0;
      padding-left 10px;
      width: 150px;
    .btn-config
      position: relative;
      //padding-top: 33px;
      margin-left: 15px;
      //height 33px;
      .img-btn-config
        //position: absolute;
        //bottom: 0;
        height: 33px
  .buttons
    display: flex;
    justify-content: flex-end;
    .button-item
      padding-left: 8px;
  .show-list
    .server-table
      border-collapse: collapse;
      border-spacing: 0;
      text-align: center;
      table-layout: automatic
      .table-title
        height: 40px;
        color: #7e90a3
        border-top 2px solid #1e9fff;
        border-left 2px solid #e2e6ec;
        border-right 2px solid #e2e6ec;
        background: #f4f6f9;
        width: 100%;
        .table-title-item
          line-height 40px;
          border-right 2px solid #e2e6ec;
          text-align: center;
      .table-row
        display flex;
        border-bottom 2px solid #e2e6ec;
        justify-content space-between
        line-height 50px;
      .table-body
        padding 0;
        .blue-txt
          color: #4db0ff
        .check-input
          color: blue;
        .table-item-operate
          display: flex;
          justify-content flex-end;
          align-items center;
          line-height: 0px;
          .table-btn-wrapper
            display: flex;
            justify-content flex-end;
            height: 36px;
            .table-btn
              margin-left: 8px;
  .btn-wrapper
    display: flex;
    margin-top 50px;
    align-items flex-end;
    justify-content space-between;
    .btn-all
      flex-basis 30;
    .sub-wrapper
      display: flex;
      .sub-button
        padding-left 10px;
  .nav-footer
    margin-top: 20px;
  .footer
    position absolute;
    font-size: 12px;
    right 10px;
    bottom: 10px;
    color: #7e90a3;
