.rule-wrapper
  position relative
  padding 20px 15px 20px;
  background: #ffffff;
  min-width 1400px;
  .header
    position: relative;
    padding-bottom: 39px;
    border-bottom: 1px solid #0b97ff;
    .header-title
      position: absolute;
      left 0;
  .top
    display: flex ;
    justify-content space-between;
    padding: 30px 8px 15px 0;
    .left
      display: flex ;
      justify-content flex-start;
      padding-left 35px;
      .title
        line-height 36px;
        color: #666666;
        font-size: 16px;
        font-weight 700;
      select
        height: 30px;
        width: 160px;
        margin-left: 20px;
        padding: 0 0 0 50px;
        border-radius 4px;
        border 1px solid #e4e8ed;
        font-size: 16px;
        text-align center;
  .show-list
    .club-table
      border-collapse: collapse;
      border-spacing: 0;
      text-align: center;
      table-layout: automatic
      .table-title
        height: 40px;
        color: #7e90a3
        border-top 2px solid #1e9fff;
        border-left 2px solid #e2e6ec;
        border-right 2px solid #e2e6ec;
        background: #f4f6f9;
        width: 100%;
        .table-title-item
          line-height 40px;
          border-right 2px solid #e2e6ec;
          text-align: center;
      .table-row
        display flex;
        border-bottom 2px solid #e2e6ec;
        justify-content space-between
        line-height 50px;
      .table-body
        padding 0;
        .check-input
          color: blue;
        .table-item-operate
          display: flex;
          justify-content flex-end;
          align-items center;
          line-height: 0px;
          .table-btn-wrapper
            display: flex;

            justify-content flex-end;
            height: 36px;
            .table-btn
              margin-left: 8px;
  .nav-footer
    margin-top: 20px;
