.action-wrapper
  position: relative
  .a-wrapper
    text-align left;
    min-width: 1450px;
    .content-wrapper
      margin-top -30px;
      padding-top 5px;
      .line
        position: absolute;
        left: 0;
        right: 0;
        border-top 2px solid #f1f1f1
      .split
        height: 30px;
        padding-left: 8px;
        text-align left;
        line-height 30px;
        color: #323232;
        font-size: 16px;
        background: #f5f5f5
        font-family: "微软雅黑", Arial;
        &:nth-child(2)
          margin-top 5px;
      .one
        display flex;
        margin-top: 12px;
        .left
          display flex;
          width 50%;
          flex-direction column;
          padding 15px 0;
          margin-right 10px;
          .left-item
            display flex;
            justify-content flex-start;
            margin-bottom: 15px;
            .title
              width: 240px;
              text-align right;
              line-height 36px;
              color: #666666;
              font-size: 16px;
              font-weight 700;
            .left-input
              width: 240px;
              padding: 4px 4px 4px 10px;
              border-radius 4px;
              border 1px solid #e4e8ed;
              margin-left: 15px;
              height: 25px;
              font-size: 16px;

          .extend
            .extend-select
              height: 35px;
              width: 255px;
              margin-left: 16px;
              padding: 0 0 0 95px;
              border-radius 4px;
              border 1px solid #e4e8ed;
              font-size: 16px;
              appearance: none;
              background: url("../../assets/btn/arrow_down.png") no-repeat scroll right center transparent;
            .btn-extend
              margin-left: 20px;
        .right
          width 50%
          border-radius 4px;
          border: 1px solid #e8ecf0;
          margin-left 10px;
          .niu-content
            display: flex;
            .niu-left
              width: 50%
              padding: 24px 0 8px 45px
              .left-item
                display flex;
                align-items center;
                margin-bottom 2px;
                .niu-input
                  width 70px;
                  height 27px;
                  border: 1px solid #e4e8ed;
                  border-radius 2px;
                  color: #ff6c00;
                  text-align center;
                  font-size: 14px;
                .txt
                  font-size: 16px;
                  color: #666666
                  font-weight 700;
                  padding 0 3px;
            .niu-right
              width: 50%
              .niu-table
                width: 100%;
                text-align: center;
                table-layout: automatic
                border-collapse: separate;
                border-spacing: 0 2px;
                margin-right 8px;
                .table-row
                  height 29px;
                  color: #0184ff
                  font-size: 14px;
                  .row-item
                    border 1px solid #e4e8ed;
                .table-title
                  height 24px;
                  color: #7f91a4;


      .back-split
        width 100%;
        box-sizing border-box;
        background: #f5f5f5;
        color: #323232;
        font-size: 16px;
        line-height 33px;
        padding-left 15px;
        border-radius 4px;
      .two
        display flex;
        margin-top: 8px;
        box-sizing border-box;
        padding 0;
        .two-item
          width 50%
          border-radius 4px;
          border: 1px solid #e8ecf0;
          .module-content
            padding 14px 0;
            .content-item
              display: flex;
              justify-content flex-start;
              font-size: 16px;


            .qiang-option
              justify-content space-between;
              .qiang-item
                width: 33%;
                text-align center;
                vertical-align middle;
                select
                  height: 30px;
                  width: 160px
                  border-radius 4px;
                  border 1px solid #e4e8ed;
                  font-size: 16px;
                  appearance: none;
                  background: url("../../assets/btn/arrow_down.png") no-repeat scroll right center transparent;
            .title
              width 210px;
              display flex;
              justify-content flex-start;
              align-items center;
              .txt
                width 108px;
                text-align right;
                color: #666666;
                font-weight 700;
              .option
                vertical-align middle;
                margin-left: 25px;
                .toggle
                  display: inline-block;
                  vertical-align: middle;
                span
                  padding-left: 4px;
                  cursor: pointer;
                  margin: 0;



            .tui-option
              margin 15px 0;
              justify-content space-between;
              .tui-item
                width: 33%;
                text-align center;
                vertical-align middle;
                select
                  height: 30px;
                  width: 160px
                  border-radius 4px;
                  border 1px solid #e4e8ed;
                  font-size: 16px;
                  appearance: none;
                  background: url("../../assets/btn/arrow_down.png") no-repeat scroll right center transparent;
            .xia-option
              justify-content space-between;

              .title
                width 210px;
              .xia-item
                width: 33%;
                text-align center;
                vertical-align middle;
                select
                  height: 30px;
                  width: 160px
                  border-radius 4px;
                  border 1px solid #e4e8ed;
                  font-size: 16px;
                  appearance: none;
                  background: url("../../assets/btn/arrow_down.png") no-repeat scroll right center transparent;
              .two-option
                display: flex;
                width: 33%;
                align-items center;
                justify-content center;
                .option-wrapper
                  display: flex;
                  justify-content space-between
                  width 186px;
                  .option
                    vertical-align middle;
                    //margin-left: 25px;

                    .toggle
                      display: inline-block;
                      vertical-align: middle;
                      margin-bottom: 2px;
                    label
                      padding-left: 4px;
                      cursor: pointer;
                      margin: 0;
                      vertical-align: middle;

        .right
          margin-left 10px;
        .left
          margin-right 10px;
      .remarks
        display: flex;
        justify-content center;
        margin 5px 0;
        .title
          font-size 16px;
          color: #666666;
          font-weight: 700;
        .remarks-box
          width: 90%;
          height: 85px;
          padding: 10px;
          resize: none;
          border: 1px solid #e4e8ed;
          border-radius: 2px;
          font-size: 16px;
          color: #666666;
      .btn-close
        position: absolute;
        left: 0;
        right: 0;
        height: 51px;
        border-bottom-right-radius: 5px;
        border-bottom-left-radius: 5px;
        background #f5f5f5;
        margin-top: -2px;
        display flex;
        justify-content center;
        align-items center;
        .agree-btn
          margin-right 30px;
        .close-btn
          margin-left: 30px;
