.action-wrapper
  position: relative
//min-width: 1980px;
  .a-wrapper
    text-align left;
    min-width: 1450px;
    .content-wrapper
      margin-top -30px;
      padding-top 5px;
      .line
        position: absolute;
        left: 0;
        right: 0;
        border-top 2px solid #f1f1f1
      .split
        height: 30px;
        padding-left: 8px;
        text-align left;
        line-height 30px;
        color: #323232;
        font-size: 16px;
        background: #f5f5f5
        font-family: "微软雅黑", Arial;
        &:nth-child(2)
          margin-top 5px;
      .one
        display flex;
        margin-top: 12px;
        .left
          display flex;
          width 50%;
          flex-direction column;
          padding 15px 0;
          .left-item
            display flex;
            justify-content flex-start;
            margin-bottom: 15px;
            .title
              width: 240px;
              text-align right;
              line-height 36px;
              color: #666666;
              font-size: 16px;
              font-weight 700;
            .left-input
              width: 240px;
              padding: 4px 4px 4px 10px;
              border-radius 4px;
              border 1px solid #e4e8ed;
              margin-left: 15px;
              height: 25px;
              font-size: 16px;

          .extend
            .extend-select
              height: 35px;
              width: 255px;
              margin-left: 16px;
              padding: 0 0 0 95px;
              border-radius 4px;
              border 1px solid #e4e8ed;
              font-size: 16px;
            .btn-extend
              margin-left: 20px;
        .right
          width 50%
          border-radius 4px;
          border: 1px solid #e8ecf0;
          .niu-content
            display: flex;
            .niu-left
              width: 50%
              padding: 24px 0 8px 45px
              .left-item
                display flex;
                align-items center;
                margin-bottom 2px;
                .niu-input
                  width 70px;
                  height 27px;
                  border: 1px solid #e4e8ed;
                  border-radius 2px;
                  color: #ff6c00;
                  text-align center;
                  font-size: 14px;
                .txt
                  font-size: 16px;
                  color: #666666
                  font-weight 700;
                  padding 0 3px;
            .niu-right
              width: 50%


      .back-split
        width 100%;
        box-sizing border-box;
        background: #f5f5f5;
        color: #323232;
        font-size: 16px;
        line-height 33px;
        padding-left 15px;
        border-radius 4px;
